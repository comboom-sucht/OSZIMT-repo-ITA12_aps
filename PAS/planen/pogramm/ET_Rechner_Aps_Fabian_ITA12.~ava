//Imports
import java.util.*;

public class ET_Rechner_Aps_Fabian_ITA12 {

  public static void main(String[] args) {

    // Variabeln deklaration
    double spannungU = 0.00;
    double wiederstandR = 0.00;
    double stromstearkeI = 0.00;
    double powerP = 0.00;
    double leitfaeigkeitG = 0.00;
    byte auswahl = 0;
    byte unterauswahl = 0;
    double eingabe_ergebniss = 0.00;
    double soll_ergebniss = 0.00;
    double rnum1 = 0.00;
    double rnum2 = 0.00;

    // Scanner deklarieren

    Scanner scanner_auswahl = new Scanner(System.in);
    Scanner scanner_unteruswal = new Scanner(System.in);
    Scanner scanner_ergebniss = new Scanner(System.in);

    // random deklarieren

    Random random1 = new Random();
    Random random2 = new Random();

    rnum1 = random1.nextInt(1000);
    rnum2 = random2.nextInt(1000);

    // abfrage des ausgerechnetem Rergebniss

    System.out.println("---------------------------------------------------------------------------");
    System.out.println("Waehlen Sie Ihren Rechner:");
    System.out.println("[0] Ohmisches Gesetz");
    System.out.println("[1] Elektrische Leistung");
    System.out.println("[2] Elektrische Leitfähigkeit");
    System.out.println("|");
    System.out.println("Geben Sie bitte eine Zahl von 0 bis 2 ein um ein Rechner auszuwählen!!!");
    System.out.println("---------------------------------------------------------------------------");
    System.out.print("=>");

    auswahl = scanner_auswahl.nextByte();

    switch (auswahl) {

    case 0:
      System.out.println("---------------------------------------------------------------------------");
      System.out.println("Waehlen Sie Ihren Rechner:");
      System.out.println("[0] Spannung");
      System.out.println("[1] Wiederstand");
      System.out.println("[2] Stromstearke");
      System.out.println("|");
      System.out.println("Geben Sie bitte eine Zahl von 0 bis 2 ein um ein Rechner auszuwählen!!!");
      System.out.println("---------------------------------------------------------------------------");
      System.out.print("=>");

      unterauswahl = scanner_unteruswal.nextByte();

      switch (unterauswahl) {
      case 0:

        wiederstandR = rnum1;
        stromstearkeI = rnum2;

        soll_ergebniss = wiederstandR * stromstearkeI;

        System.out.println("Berechnen Sie die Spannung aus R =" + wiederstandR + " und I = " + stromstearkeI);
        System.out.print("Ergebniss in Volt =>");

        eingabe_ergebniss = scanner_ergebniss.nextDouble();

        break;

      case 1:

        stromstearkeI = rnum1;
        spannungU = rnum2;

        soll_ergebniss = spannungU / stromstearkeI;
        System.out.println("Berechnen Sie den Wiederstand aus U =" + spannungU + " und I = " + stromstearkeI);
        System.out.print("Ergebniss in Ohm =>");

        eingabe_ergebniss = scanner_ergebniss.nextDouble();

        break;

      case 2:

        spannungU = rnum1;
        wiederstandR = rnum2;

        soll_ergebniss = spannungU / wiederstandR;
        System.out.println("Berechnen Sie die Stomstearke aus R =" + wiederstandR + " und U = " + stromstearkeI);
        System.out.print("Ergebniss in Ampere =>");

        eingabe_ergebniss = scanner_ergebniss.nextDouble();

        break;

      default:

        if (unterauswahl >= 3) {
          System.out.print("Das habe ich nicht Verstanden!!");
        }
        ;

        break;
      }
      break;

    case 1:
      System.out.println("---------------------------------------------------------------------------");
      System.out.println("Waehlen Sie Ihren Rechner:");
      System.out.println("[0] Spannung");
      System.out.println("[1] Power");
      System.out.println("[2] Stromstearke");
      System.out.println("|");
      System.out.println("Geben Sie bitte eine Zahl von 0 bis 2 ein um ein Rechner auszuwählen!!!");
      System.out.println("---------------------------------------------------------------------------");
      System.out.print("=>");

      unterauswahl = scanner_unteruswal.nextByte();

      switch (unterauswahl) {
      case 0:

        break;

      case 1:

        break;

      case 2:

        break;

      default:

        if (unterauswahl >= 3) {
          System.out.print("Das habe ich nicht Verstanden!!");
        }
        ;

        break;
      }
      break;

    case 2:
      System.out.println("---------------------------------------------------------------------------");
      System.out.println("Waehlen Sie Ihren Rechner:");
      System.out.println("[0] Spannung");
      System.out.println("[1] Wiederstand");
      System.out.println("|");
      System.out.println("Geben Sie bitte eine Zahl von 0 bis 1 ein um ein Rechner auszuwählen!!!");
      System.out.println("---------------------------------------------------------------------------");
      System.out.print("=>");

      unterauswahl = scanner_unteruswal.nextByte();

      switch (unterauswahl) {
      case 0:

        break;

      case 1:

        break;

      default:

        if (unterauswahl >= 2) {
          System.out.print("Das habe ich nicht Verstanden!!");
        }
        ;

        break;
      }
      break;

    default:

      if (auswahl >= 3) {
        System.out.print("Das habe ich nicht Verstanden!!");
      }
      ;

      break;
    }

    // ausgabe Korektheit

    if (eingabe_ergebniss == soll_ergebniss) {
      System.out.println("Ihr Ergebiss ist Richtig!!!");
      System.out.println("Ihre Eingabe: " + eingabe_ergebniss);
    } else {
      System.out.println("Ihr Ergebiss ist leider falsch!!!");
      System.out.println("Ihre Eingabe: " + eingabe_ergebniss);
      System.out.println("Korektes Ergebniss ist: " + soll_ergebniss);
    }
  }
}
